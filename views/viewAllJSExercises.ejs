<section class="content-header">
  <h1>
    View All JS Exercises
    <small>You can read somthing new and practice</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/viewAllJSExercises"><i class="fa fa-laptop"></i>JS Exercises</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content page-view-all">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">JS Exercises</h3>
    </div>
    <div class="box-body">
      <ul class="todo-list">
      	<li ng-repeat="exercise in jsExercises">
      		<a ng-href="#/jsExercise/{{exercise.name}}"> {{exercise.name}}</a>
          <p class="hashtag">#{{exercise.suitable}}</p>
      	</li>
      </ul>
    </div><!-- /.box-body -->
    <div class="box-footer" ng-if="editor">
       <button class="btn btn-default">
        <a ng-href="#/addJSExercise" title="Add item">
          <i class="fa fa-plus"></i> Add JS Exercise
        </a>
      </button>
    </div>
  </div><!-- /.box -->

</section><!-- /.content -->