<section class="content-header">
  <h1>
    Exercises for Course
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/exercisesForCourse"><i class="fa fa-search"></i>Exercises for Course</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content page-view-all row">
	<div class="row">
		<div class="col-md-6">
		   <div class="form-group has-feedback">
		    <label for="degree">Degree:</label>
		    <select id="degree" class="form-control" ng-model="userData.degree" ng-change="findCoursesByDegree(userData.degree)">
		      <option>Bachelor</option>
		      <option>Master</option>
		    </select>
		   </div>
		   <div class="form-group has-feedback">
		    <label for="course">Course:</label>
		    <select id="course" ng-model="userData.course"class="form-control" ng-change="findExercisesByCourseName(userData.course)">
		      <option ng-repeat="course in courses track by $index">{{course.name}}</option>
		    </select>
		  </div>
	  </div>
	</div>
  <div ng-if="showHTMLSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">HTML Exercises</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
        	<li ng-repeat="exercise in htmlExercises">
        		<a ng-href="#/htmlExercise/{{exercise.name}}">{{exercise.name}}</a>
        	</li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div ng-if="showJSSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">JS Exercises</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
          <li ng-repeat="exercise in jsExercises">
            <a ng-href="#/jsExercise/{{exercise.name}}">{{exercise.name}}</a>
          </li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div ng-if="showTestsSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">My Tests</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
          <li ng-repeat="test in tests">
            <a ng-href="#/test/{{test.name}}">{{test.name}}</a>
          </li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</section><!-- /.content -->