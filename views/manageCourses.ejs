<section class="content-header">
  <h1>
    Manage Courses
    <small>You can view all courses and add new courses</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/manageCourses"><i class="fa fa-archive"></i>Manage Courses</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <section class="col-lg-6">
          <!-- list -->
          <div class="box box-primary">
            <div class="box-header">
              <i class="ion ion-clipboard"></i>
              <h3 class="box-title">Bachelor Courses</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
              <ul class="todo-list">
                <li ng-repeat="course in bachelorCourses">
                  <div class="row no-margin">
                    <div class="col-xs-8">
                      <!-- icon -->
                      <span class="handle">
                        <i class="fa fa-ellipsis-v"></i>
                        <i class="fa fa-ellipsis-v"></i>
                      </span>
                      <!-- list -->
                      <span class="text" ng-show="!editable[course._id]">{{course.name}}</span>
                      <input type="text" ng-model="course.name" ng-show="editable[course._id]"/>
                      <p ng-show="!editable[course._id]"><i>{{course.degree}}</i></p>
                      <select id="degree" class="form-control" ng-model="course.degree" ng-show="editable[course._id]">
                        <option>Bachelor</option>
                        <option>Master</option>
                      </select>
                      <div class="mt-20" ng-show="editable[course._id]">
                        <button class="btn-warning" ng-click="editCourse(course)">Save</button>
                        <button ng-click="hideEditForm(course._id)" class="btn-default">Cancel</button>
                      </div>
                    </div>
                    <div class="col-xs-4">
                      <div class="tools" ng-if="editor">
                        <a href="" ng-click="showEditForm(course._id)">
                          <i class="fa fa-edit"></i>
                        </a>
                        <a href="" ng-click="confirmRemovingCourse(course, $index)">
                          <i class="fa fa-trash-o"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        </section><!-- left col -->
        <section class="col-lg-6">
          <!-- list -->
          <div class="box box-primary">
            <div class="box-header">
              <i class="ion ion-clipboard"></i>
              <h3 class="box-title">Master Courses</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
              <ul class="todo-list">
                <li ng-repeat="course in masterCourses">
                  <div class="row no-margin">
                    <div class="col-md-8">
                      <!-- icon -->
                      <span class="handle">
                        <i class="fa fa-ellipsis-v"></i>
                        <i class="fa fa-ellipsis-v"></i>
                      </span>
                      <!-- list -->
                      <span class="text" ng-show="!editable[course._id]">{{course.name}}</span>
                      <input type="text" ng-model="course.name" ng-show="editable[course._id]"/>
                      <p ng-show="!editable[course._id]"><i>{{course.degree}}</i></p>
                      <select id="degree" class="form-control" ng-model="course.degree" ng-show="editable[course._id]">
                        <option>Bachelor</option>
                        <option>Master</option>
                      </select>
                      <div class="mt-20" ng-show="editable[course._id]">
                        <button class="btn-warning" ng-click="editCourse(course)">Save</button>
                        <button ng-click="hideEditForm(course._id)" class="btn-default">Cancel</button>
                      </div>

                    </div>
                    <div class="col-md-4">
                      <div class="tools" ng-if="editor">
                        <a ng-click="showEditForm(course._id)">
                          <i class="fa fa-edit"></i>
                        </a>
                        <a href="" ng-click="confirmRemovingCourse(course, $index)">
                          <i class="fa fa-trash-o"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        </section><!-- right col -->
      </div>

      <button class="btn btn-default mt-20" ng-click="showForm()" ng-if="editor">
      	<i class="fa fa-plus"></i>Add New Course
      </button>
      <div ng-show="showNewCourseForm" class="mt-20 box box-primary">
        <div class="box-header">
              <i class="ion ion-clipboard"></i>
              <h3 class="box-title">Course Information</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
  	      <div class="form-group">
  	      	<label for="degree">Degree</label>
  	      	<select id="degree" class="form-control" ng-model="courseDegree">
  	      		<option>Bachelor</option>
  	      		<option>Master</option>
  	      	</select>
  	      </div>
  	      <div class="form-group">
  	      	<label for="name">Name</label>
  	      	<input type="text" id="name" class="form-control" ng-model="courseName" />
  	      </div>
  	      <button class="btn btn-success" ng-click="continueToResults()">Continue</button>
  	      <div ng-show="showResults">
  		      <h4>The following courses will be created:</h4>
  		      <ul class="todo-list">
  		      	<li ng-repeat="course in newCourses">{{course.name}}</li>
  		      </ul>
  		      <button class="btn btn-warning mt-20" ng-click="saveCourses()">Create Couses</button>
  		    </div>
        </div>
	  </div>
  </div>
</section>