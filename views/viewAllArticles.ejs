<section class="content-header">
  <h1>
    View All Articles With Tests
    <small>You can read somthing new and practice</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/viewAllArticles"><i class="fa fa-book"></i>Articles</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content page-view-all">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">Articles</h3>
    </div>
    <div class="box-body">
      <ul class="todo-list">
      	<li ng-repeat="test in tests">
          <div class="row no-margin">
            <div class="col-xs-8">
              <a ng-href="#/test/{{test.name}}"> {{test.name}}</a>
              <p class="hashtag">#{{test.suitable}}</p>
              <p ng-if="test.course" class="hashtag">For Course: {{test.course.name}}</p>
            </div>
            <div class="col-xs-4">
              <div class="tools" ng-if="editor">
                <a ng-href="#/edittest/{{test.name}}" ng-click="editTest(test)">
                  <i class="fa fa-edit"></i>
                </a>
                <a href="" ng-click="confirmRemovingTest(test, $index)">
                  <i class="fa fa-trash-o"></i>
                </a>
              </div>
            </div>
          </div>
      	</li>
      </ul>
    </div><!-- /.box-body -->
    <div class="box-footer" ng-if="editor">
       <button class="btn btn-default">
        <a ng-href="#/newtest" title="Add item" href="#/newtest">
          <i class="fa fa-plus"></i> Add item
        </a>
      </button>
    </div>
  </div><!-- /.box -->

</section><!-- /.content -->