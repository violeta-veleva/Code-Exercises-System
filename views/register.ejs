<div class="register-box">
  <div class="register-logo">
    <b>Code Exercises System</b>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>
    <form name="reviewForm" novalidate>
      <div class="form-group has-feedback">
        <input ng-model="userData.username" type="email" class="form-control" placeholder="Email" required>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <label for="degree">Degree</label>
        <select id="degree" class="form-control" ng-model="userData.degree" ng-change="findCoursesByDegree(userData.degree)">
          <option>Bachelor</option>
          <option>Master</option>
        </select>
       </div>
       <div class="form-group has-feedback">
        <label for="course">Course</label>
        <select id="course" ng-model="userData.course"class="form-control">
          <option ng-repeat="course in courses track by $index">{{course.name}}</option>
        </select>
      </div>
      <div class="form-group has-feedback">
        <input ng-model="userData.password" type="password" class="form-control" placeholder="Password" required>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input ng-model="userData.passwordAgain" type="password" class="form-control" placeholder="Retype password" ng-blur="checkPasswords()" required>
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>
      <div class="alert alert-danger" ng-show="showPasswordMatchError">
        <p>Passwords don't match!</p>
      </div>
      <button class="btn btn-primary btn-block btn-flat" ng-class="{ disabled : !reviewForm.$valid }" ng-click="reviewForm.$valid && register()">Register</button>
    </form>        

  </div><!-- /.form-box -->
</div><!-- /.register-box -->