<section class="content-header">
  <h1>
    Edit Article
    <small>You can change the article, the questions and the answers</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a ng-href="#/viewAllArticles"><i class="fa fa-book"></i>Articles</a></li>
    <li class="active"><a ng-href="#/edittest/{{test.name}}"></i>Edit Article</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="inner-page">
		<div class="box box-primary">

			<div class="box-header">
				<h3 class="box-title">Edit test</h3>
			</div>
			<div class="box-body">
				<div class="form-group">
					<label for="" class="test-name">Test name</label>
					<input type="text" ng-model="test.name" class="form-control" required/>
				</div>

				<div class="form-group">
					<label for="suitable">Suitable for:</label>
					<select id="suitable" class="form-control" ng-model="test.suitable" required>
						<option>Beginners</option>
						<option>Middle Level</option>
						<option>Advanced</option>
					</select>
				</div>

				<div class="form-group">
					<label for="" class="test-article">Test article</label>
					<textarea id="editor1" name="editor1" rows="10" ng-model="test.article" class="form-control">
					</textarea>
				</div>

				<div ng-repeat="question in test.questions track by $index" class="form-group">
					<label for="" class="question-name">Question {{$index + 1}}: </label>
					<input type"text" ng-model="question.name" class="form-control" required />
					<div ng-repeat="answer in question.answers track by $index" class="form-group">
						<label for="">Answer {{$index + 1}}:</label>
						<input type="text" ng-model="answer.name" class="form-control" required/>
					</div>
					<div class="form-group">
						<label for="rightAnswer" class="question-name">Right answer</label>
						
						<select id="rightAnswer" ng-model="question.rightAnswer" class="form-control answer-field" required>
							<option ng-repeat="answer in question.answers track by $index">{{answer.name}}</option>
						</select>
					</div>
					<button class="btn btn-primary" ng-click="addAnswer(question)">Add Answer</button>
				</div>

				<button ng-click="addQuestion()" class="btn btn-success pull-right"> Add new question </button>
				<button class="btn btn-success" ng-click="editTest(test)">Save</button>
			</div>
		</div>
	</div>
</section>