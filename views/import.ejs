<section class="content-header">
  <h1>
    Import
    <small>You can import every type of information</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/import"><i class="fa fa-user"></i>Import</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">Import</h3>
    </div>
    <div class="box-body">
      <div class="form-group">
        <label for="type">Select type:</label>
        <select id="type" ng-model="importData.type" class="form-control">
          <option>Article with test</option>
          <option>HTML Exercise</option>
          <option>JS Exercise</option>
          <option>Users</option>
          <option>Courses</option>
        </select>
      </div>
      <p>Example of the JSON file that can be imported</p>
      <pre ng-if="importData.type === 'Article with test'">
        [  
         {  
          "name":"Article name",
          "article":"Some article\n",
          "suitable": "Beginners",
          "course": {
            "degree": "Bachelor",
            "name": "2 year software engineering"
          },
          "questions":[  
           {  
            "name":"question 1",
            "answers":[  
               {  
                "name":"answer 1"
               },
               {  
                "name":"answer 2"
               }
            ],
            "rightAnswer": "answer 1",
            "choosen":""
            },
            {  
            "name":"question 2",
            "answers":[  
               {  
                "name":"answer 1"
               },
               {  
                "name":"answer 2"
               }
            ],
            "rightAnswer": "answer 2",
            "choosen":""
           }
          ]
         } 
      ]
      </pre>
      <pre ng-if="importData.type === 'HTML Exercise'">
        [  
           {  
              "name":"HTML Headings",
              "suitable":"Beginners",
              "course": {
                "degree": "Bachelor",
                "name": "2 year software engineering"
              },
              "exercises":[  
                 {  
                    "introduction":"Intro text",
                    "instructions":"Instructions",
                    "checkFunction":"$('#user-output').contents().find('h1').next().is('h2')",
                    "errorMsg":"Error msg text",
                    "html":"Title",
                    "css":"p{\n    color: red;\n}"
                 }
              ]
           }
        ]
      </pre>
      <pre ng-if="importData.type === 'JS Exercise'">
        [  
           {  
              "name":"Basic JS",
              "suitable":"Beginners",
              "course": {
                "degree": "Bachelor",
                "name": "2 year software engineering"
              },
              "exercises":[  
                 {  
                    "introduction":"Intro text",
                    "checkFunction":"function(){ if ( (typeof sum != 'undefined') && (sum(4, 3)===7) ){ return true } else{ return false } }",
                    "instructions":"Write a function with name \"sum\" that take 2 numbers and return their sum.",
                    "errorMsg":"Make sure you define a function with name \"sum\". Do not forget to return the sum.",
                    "js":"//code"
                 }
              ]
           }
        ]
      </pre>
      <pre ng-if="importData.type === 'Users'">
        [  
           {  
              "username":"vili@vili",
              "password":"pass",
              "role":"student",
              "degree": "master",
              "course":"custom"
           }
        ]
      </pre>
      <pre ng-if="importData.type === 'Courses'">
        [
           {  
              "_id":{  
                 "$oid":"55997a6445cc057c1126bd2f"
              },
              "name":"2 year security",
              "degree":"Master"
           }
        ]
      </pre>
      <div class="form-group">
        <input type="file" excel="importData.file"/>
      </div>
      <div class="form-group">
        <!-- <form action="/users/import" enctype="multipart/form-data" method="POST">
          <input type="file" name="file"/>
          <button type="submit">Import</button>
        </form> -->
        <button class="btn btn-success" ng-click="save()">Import</button>
      </div>
    </div>
   </div>
</section>