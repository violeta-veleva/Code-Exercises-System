<section class="content-header">
  <h1>
    View All Users
    <small>You can change the users' rights</small>
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/viewAllUsers"><i class="fa fa-user"></i>Users</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">Users</h3>
	      <ul class="todo-list">
	      	<li ng-repeat="user in users">
				<h4>Username: {{user.username}}</h4>
				<p>Role: {{user.role}}</p>
				<select id="user-role-select" ng-model="user.role" class="form-control">
					<option>student</option>
					<option>teacher</option>
					<option>admin</option>
				</select>
				<button class="btn btn-danger" ng-click="editRole(user)">Change role</button>
	      	</li>
	      </ul>
    </div>
    <div class="box-body">
    </div>
   </div>
</section>