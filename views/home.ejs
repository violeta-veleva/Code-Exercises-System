        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <div class="row">
            <div class="col-md-4 col-xs-12">
              <!-- small box -->
              <div class="small-box bg-aqua">
                <div class="inner">
                  <h3 id="html-exercise-header">{{htmlExercisesCount}}</h3>
                  <p>HTML Exercises</p>
                </div>
                <div class="icon">
                  <img src="/img/html.png" alt="html-logo"/>
                </div>
                <a ng-href="#/viewAllHTMLExercises"  class="small-box-footer">View all <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div><!-- ./col -->
            <div class="col-md-4 col-xs-12">
              <!-- small box -->
              <div class="small-box bg-yellow">
                <div class="inner">
                  <h3>{{jsExercisesCount}}</h3>
                  <p>JS Exercises</p>
                </div>
                <div class="icon">
                  <img src="/img/js.png" alt="js-logo"/>
                </div>
                <a ng-href="#/viewAllJSExercises"  class="small-box-footer">View all <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div><!-- ./col -->

            <div class="col-md-4 col-xs-12">
              <!-- small box -->
              <div class="small-box bg-green">
                <div class="inner">
                  <h3>{{testsCount}}</h3>
                  <p>Articles With Tests</p>
                </div>
                <div class="icon">
                   <img src="/img/article.png" alt="Programming articles with tests"/>
                </div>
                <a ng-href="#/viewAllArticles"  class="small-box-footer">View all <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div><!-- ./col -->
          </div><!-- /.row -->
          <!-- Main row -->
          <div class="row">
            <!-- Left col -->
            <section class="col-lg-6">
              <!-- TO DO List -->
              <div class="box box-primary">
                <div class="box-header">
                  <i class="ion ion-clipboard"></i>
                  <h3 class="box-title">HTML Exercises</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <ul class="todo-list">
                    <li ng-repeat="exercise in htmlExercises | limitTo: 10">
                      <div class="item-content">
                        <div class="row no-margin">
                          <div class="col-xs-8">
                          <!-- icon -->
                            <span class="handle">
                              <i class="fa fa-ellipsis-v"></i>
                              <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <!-- list -->
                            <span class="text">
                              <a ng-href="#/htmlExercise/{{exercise.name}}"> {{exercise.name}}</a>
                            </span>
                            <p class="hashtag">#{{exercise.suitable}}</p>
                            <p ng-if="exercise.course" class="hashtag">For Course: {{exercise.course.name}}</p>
                          </div>
                          <div class="col-xs-4">
                            <div class="tools" ng-if="editor">
                              <a ng-href="#/editHtmlExercise/{{exercise.name}}">
                                <i class="fa fa-edit"></i>
                              </a>
                            
                              <a href="" ng-click="confirmRemovingHTMLExercise(exercise, $index)">
                                <i class="fa fa-trash-o"></i>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix no-border">
                  <a ng-href="#/viewAllHTMLExercises" title="Add item" class="btn btn-default pull-left">
                    View All
                  </a>
                  <a ng-href="#/addHtmlExercise" title="Add item" class="btn btn-default pull-right" ng-if="editor">
                    <i class="fa fa-plus"></i> Add HTML Exercise
                  </a>
                </div>
              </div><!-- /.box -->


            </section><!-- /.Left col -->
            <section class="col-lg-6">
              <!-- list -->
              <div class="box box-primary">
                <div class="box-header">
                  <i class="ion ion-clipboard"></i>
                  <h3 class="box-title">JS Exercises</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <ul class="todo-list">
                    <li ng-repeat="exercise in jsExercises | limitTo: 10">
                      <div class="row no-margin">
                        <div class="col-xs-8">
                          <!-- icon -->
                          <span class="handle">
                            <i class="fa fa-ellipsis-v"></i>
                            <i class="fa fa-ellipsis-v"></i>
                          </span>
                          <!-- list -->
                          <span class="text"><a ng-href="#/jsExercise/{{exercise.name}}"> {{exercise.name}}</a></span>
                          <p class="hashtag">#{{exercise.suitable}}</p>
                          <p ng-if="exercise.course" class="hashtag">For Course: {{exercise.course.name}}</p>
                        </div>
                        <div class="col-xs-4">
                          <div class="tools" ng-if="editor">
                            <a ng-href="#/editJSExercise/{{exercise.name}}">
                              <i class="fa fa-edit"></i>
                            </a>
                            <a href="" ng-click="confirmRemovingJSExercise(exercise, $index)">
                              <i class="fa fa-trash-o"></i>
                            </a>
                          </div>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix no-border">
                  <a ng-href="#/viewAllJSExercises" title="Add item" class="btn btn-default pull-left">
                    View All
                  </a>
                  <a ng-href="#/addJSExercise" title="Add item" class="btn btn-default pull-right" ng-if="editor">
                    <i class="fa fa-plus"></i> Add JS Exercise
                  </a>
                </div>
              </div><!-- /.box -->


            </section><!-- right col -->
          </div><!-- /.row (main row) -->

           <div class="row">
            <!-- Left col -->
            <section class="col-lg-6">
              <!-- List -->
              <div class="box box-primary">
                <div class="box-header">
                  <i class="ion ion-clipboard"></i>
                  <h3 class="box-title">Articles With Tests</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <ul class="todo-list">
                    <li ng-repeat="test in tests | limitTo: 10">
                      <!-- icon -->
                      <div class="row no-margin">
                        <div class="col-xs-8">
                          <span class="handle">
                            <i class="fa fa-ellipsis-v"></i>
                            <i class="fa fa-ellipsis-v"></i>
                          </span>
                          <!-- list -->
                          <span class="text"><a ng-href="#/test/{{test.name}}"> {{test.name}}</a></span>
                          <p class="hashtag">#{{test.suitable}}</p>
                          <p ng-if="test.course" class="hashtag">For Course: {{test.course.name}}</p>
                        </div>
                        <div class="col-xs-4">
                          <div class="tools" ng-if="editor">
                            <a ng-href="#/edittest/{{test.name}}" ng-click="editTest(test)">
                              <i class="fa fa-edit"></i>
                            </a>
                            <a href="" ng-click="confirmRemovingTest(test, $index)">
                              <i class="fa fa-trash-o"></i>
                            </a>
                          </div>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix no-border">
                  <a ng-href="#/viewAllArticles" title="Add item" class="btn btn-default pull-left">
                    View All
                  </a>
                  <a ng-href="#/newtest" title="Add item" class="btn btn-default pull-right" ng-if="editor">
                    <i class="fa fa-plus"></i> Add Article with test
                  </a>
                </div>
              </div><!-- /.box -->


            </section><!-- /.Left col -->
             <section class="col-lg-6">
             </section>
          </div>

        </section><!-- /.content -->


