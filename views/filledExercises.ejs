<section class="content-header">
  <h1>
    My Exercises
  </h1>
  <ol class="breadcrumb">
    <li><a ng-href="#/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active"><a ng-href="#/myExercises"><i class="fa fa-laptop"></i>My Exercises</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content page-view-all row">
  <div ng-if="showHTMLSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">My HTML Exercises</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
        	<li ng-repeat="exercise in filledHTMLExercises">
        		<a ng-href="#/htmlExercise/{{exercise.htmlExercise.name}}">{{exercise.htmlExercise.name}}</a>
        	</li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div ng-if="showJSSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">My JS Exercises</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
          <li ng-repeat="exercise in filledJSExercises">
            <a ng-href="#/jsExercise/{{exercise.jsExercise.name}}">{{exercise.jsExercise.name}}</a>
          </li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div ng-if="showTestsSection" class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">My Tests</h3>
      </div>
      <div class="box-body">
        <ul class="todo-list">
          <li ng-repeat="filledTest in filledTests">
            <a ng-href="#/test/{{filledTest.test.name}}">{{filledTest.test.name}}</a>
          </li>
        </ul>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</section><!-- /.content -->